extends layout

block content
    //
       Header
    //header#header
        //
           Logo
        h1#logo DropTrainer
        //
           Nav
        nav#nav
            ul
                li
                    a(href='#intro') Intro
                li
                    a(href='#one') What I Do
                li
                    a(href='#two') Who I Am
                li
                    a(href='#work') My Work
                li
                    a(href='#contact') Contact
    //
       Intro
    section#intro.main.style1.dark.fullscreen
        .content.container(class="75%")
            header
                h2 DropTrainer
            p.
                Drag and drop your audio for training
            footer
                a.button.style2.down(href='#drop') Drop
    //
       Drag n drop
    section#drop.main.style2.left.dark.fullscreen
        .app.box.style2#dropzone
            | Drop files here to add to playlist
        .content.box.style2
            header
                h2 Drop it like hot stuff!
            p.
                Pick out some music or podcasts and drop it in the box over there.
        a.button.style2.down.anchored(href='#train') Train
    //
       Trainer
    section#train.main.style2.left.dark.fullscreen
        .app.box.style2
            div#visualization
                | [visualize difficulty over time]
            div#difficulty
                | [adjust difficulty]
            a#play.button GO
        .content.box.style2
            header
                h2 Go for the gold!
            p.
                Use the slider to control how hard you want to push yourself, and when you're ready, press GO!

        a.button.style2.down.anchored(href='#contact') About
